<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="marvelousboomerangmoose.shoppingwithfriends"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="marvelousboomerangmoose.shoppingwithfriends.MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.HomeActivity"
            android:label="@string/title_activity_home"
            android:parentActivityName="marvelousboomerangmoose.shoppingwithfriends.MainActivity" >
        </activity>
        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.RegActivity"
            android:label="@string/title_activity_reg"
            android:parentActivityName="marvelousboomerangmoose.shoppingwithfriends.MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.ActiveUsersListActivity"
            android:label="@string/title_user_list"
            android:parentActivityName="marvelousboomerangmoose.shoppingwithfriends.HomeActivity" >
        </activity>
        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.AddFriendActivity"
            android:label="@string/title_activity_add_friend"
            android:parentActivityName="marvelousboomerangmoose.shoppingwithfriends.HomeActivity" >
        </activity>
        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.CurrentFriendListActivity"
            android:label="@string/title_activity_current_friend_list"
            android:parentActivityName="marvelousboomerangmoose.shoppingwithfriends.HomeActivity" >
        </activity>
        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.CurrentFriendDetailActivity"
            android:label="@string/title_activity_current_friend_detail"
            android:parentActivityName="marvelousboomerangmoose.shoppingwithfriends.CurrentFriendListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="marvelousboomerangmoose.shoppingwithfriends.CurrentFriendListActivity" />
        </activity>
        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.ActiveUsersDetailActivity"
            android:label="@string/title_activity_active_users_detail"
            android:parentActivityName="marvelousboomerangmoose.shoppingwithfriends.ActiveUsersListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="marvelousboomerangmoose.shoppingwithfriends.ActiveUsersListActivity" />
        </activity>
        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.ItemListActivity"
            android:label="@string/title_activity_item_list" >
        </activity>
        <activity
            android:name="marvelousboomerangmoose.shoppingwithfriends.AddItemActivity"
            android:label="@string/title_activity_add_item" >
        </activity>
    </application>

</manifest>