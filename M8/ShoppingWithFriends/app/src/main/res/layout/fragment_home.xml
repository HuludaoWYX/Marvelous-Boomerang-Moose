<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/teal"
    tools:context="marvelousboomerangmoose.shoppingwithfriends.HomeActivity$PlaceholderFragment"
    android:clickable="false">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/logout_Button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="logoutOnClick" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Friend List"
        android:id="@+id/currentFriends"
        android:layout_gravity="center"
        android:onClick="currentFriendsOnClick"
        android:layout_below="@+id/logout_Button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Users"
        android:id="@+id/activeUsers"
        android:clickable="true"
        android:onClick="activeUsersOnClick"
        android:nestedScrollingEnabled="true"
        android:layout_alignTop="@+id/currentFriends"
        android:layout_alignEnd="@+id/logout_Button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Interest"
        android:id="@+id/itemList"
        android:onClick="buttonItemListOnClick"
        android:layout_below="@+id/currentFriends"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Sale"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/itemList"
        android:layout_alignStart="@+id/activeUsers"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="reportSaleOnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Interested Items on Sale"
        android:id="@+id/textView11"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
